<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_grade_value_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                tools:text="@sample/grades" />

            <TextView
                android:id="@+id/row_grade_student_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/row_grade_subject_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                tools:text="@sample/subjects" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/row_grade_edit_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/row_grade_remove_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            app:srcCompat="@android:drawable/ic_menu_delete" />
    </LinearLayout>

    <TextView
        android:id="@+id/row_grade_note_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>